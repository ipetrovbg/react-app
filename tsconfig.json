{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "skipLibCheck": true,
    "noStrictGenericChecks": true,
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "removeComments": false
  },
  "include": [
    "./src/**/*"
  ]
}
